<!doctype html>
<html lang="kr">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>검색 결과</title>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Bungee+Spice&family=Gamja+Flower&family=Gasoek+One&family=Hi+Melody&family=Jua&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
    rel="stylesheet" />
  <link rel="stylesheet" href="/public/styles/search.css" />
  <link rel="stylesheet" href="/public/styles/nav.css" />
  <link rel="stylesheet" href="/public/styles/notification.css" />
  <link rel="stylesheet" href="/public/styles/main.css" />
</head>

<body>
  <%- include( 'nav.ejs' ) %>

    <div id="notificationPopup"
      style="display: none; position: fixed; top: 20%; left: 50%; transform: translate(-50%, 0); background: black; width: 80%; max-width: 400px; height: 50%; border: 1px solid #ccc; border-radius: 8px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); overflow-y: auto; z-index: 1000;">
      <div id="notificationList"></div>
      <button id="closePopupButton" style="position: absolute; bottom: 8px; right: 50%;">닫기</button>
    </div>

    <div id="resultsContainer">
      <h1>검색 결과</h1>

      <div id="tabs">
        <button class="tab active" data-tab="videos">동영상</button>
        <button class="tab" data-tab="channel">채널</button>
      </div>

      <div id="videosContainer" class="tab-content active">
        <h2>동영상</h2>
        <div id="videoResultsContainer" class="grid-container"></div>
      </div>

      <div id="channelContainer" class="tab-content">
        <h2>채널</h2>
        <div id="channelResultsContainer" class="grid-container"></div>
      </div>
    </div>

    <script src="/public/scripts/search.js"></script>
    <script src="/public/scripts/main.js"></script>
    <script src="/public/scripts/notifications-popup.js"></script>
</body>

</html>