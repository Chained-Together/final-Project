<!doctype html>
<html lang="kr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Loopfiy</title>
    <!-- 부트 스트렙 -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- nav로고 폰트 -->
    <link
      href="https://fonts.googleapis.com/css2?family=Bungee+Spice&family=Gamja+Flower&family=Gasoek+One&family=Hi+Melody&family=Jua&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
      rel="stylesheet"
    />
    <!-- nav로고 이미지 -->
    <script src="https://kit.fontawesome.com/6a4db89020.js" crossorigin="anonymous"></script>
    <link
      href="https://demos.creative-tim.com/argon-dashboard-pro/assets/css/nucleo-svg.css"
      rel="stylesheet"
    />
    <!-- nav CSS 파일 -->
    <link rel="stylesheet" href="/public/styles/nav.css" />
    <!-- 채넗 CSS 파일 -->
    <link rel="stylesheet" href="\public\styles\new-channel.css" />
  </head>
  <body class="channel-body">
    <!-- nav바 -->
    <%- include('nav') %>

    <div class="main-channel">
      <!-- 채널 컨테이너 -->
      <div class="channel-container">
        <div class="channel-img-box">
          <img src="profileImageElement.src" alt="프로필 사진" id="profile" class="profile-img" />
        </div>
        <div class="channel-name-box">
          <h5>
            <p class="channel-name"><strong id="channelName">로딩 중...</strong></p>
          </h5>
          <div></div>
        </div>
      </div>

      <!-- 영상 컨테이너 -->
      <div class="video-list-bar center-end-center">
        <span>내 동영상</span>
      </div>
      <div class="video-list-container">
        <div class="video-list-box" id="thumbnailsContainer"></div>
      </div>
    </div>
    <script src="/public/scripts/get-channel.js"></script>
    <script src="/public/scripts/search.js" defer></script>
    <script src="/public/scripts/join-chat.js"></script>
  </body>
</html>
