<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Loopfiy</title>
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bungee+Spice&family=Gamja+Flower&family=Gasoek+One&family=Hi+Melody&family=Jua&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
      rel="stylesheet"
    />

    <link rel="stylesheet" href="/public/styles/video-edit-popup.css" />
    <link rel="stylesheet" href="/public/styles/edit-channel.css" />
    <link rel="stylesheet" href="/public/styles/channel.css" />
    <link rel="stylesheet" href="/public/styles/nav.css" />
    <link rel="stylesheet" href="/public/styles/my-channel.css" />
    <script src="https://kit.fontawesome.com/6a4db89020.js" crossorigin="anonymous"></script>
  </head>
  <body>
  <!-- nav바 -->
  <%- include('nav') %>

    <div class="channel-info" id="channelInfo">
      <img src="profileImageElement.src" alt="프로필 사진" id="profile" class="profile-btn" />
      <h2>
        <p><strong id="channelName">로딩 중...</strong></p>
      </h2>
      <button type="submit" class="search-btn" id="accountEditBtn">
        <img src="public/images/option.png" alt="Search Icon" />
      </button>
      <button class="profile-edit-btn" id="profileEditBtn">프로필 수정</button>
      <button class="done-btn" id="editDoneBtn">완료</button>
    </div>
    <p class="error" id="errorMessage"></p>

    <div class="video-list" id="thumbnailsContainer"></div>

    <div id="editModal" class="modal" style="display: none">
      <div class="modal-content">
        <span id="closeModal" class="close-button">&times;</span>
        <h2>비디오 편집</h2>

        <label class="popup-label">썸네일 URL:</label>
        <input id="thumbnailInput" class="popup-input" type="text" />

        <label class="popup-label">영상 제목:</label>
        <input id="titleInput" class="popup-input" type="text" />

        <label class="popup-label">영상 설명:</label>
        <textarea id="descriptionInput" class="popup-textarea"></textarea>

        <label class="popup-label">해시태그:</label>
        <input id="hashtagInput" class="popup-input" type="text" />

        <label class="popup-label">공개 여부:</label>
        <select id="visibilityInput" class="popup-input">
          <option value="public">public</option>
          <option value="private">private</option>
          <option value="unlisted">unlisted</option>
        </select>

        <button id="updateButton" class="popup-save-button">수정하기</button>
      </div>
    </div>

    <div id="profileEditModal" class="modal" style="display: none">
      <div class="modal-content">
        <span id="closeProfileEditModal" class="close-button">&times;</span>
        <h2>프로필 수정</h2>

        <label class="popup-label">프로필 이미지 URL:</label>
        <input id="profileImageInput" class="popup-input" type="text" />

        <label class="popup-label">프로필 이름:</label>
        <input id="profileNameInput" class="popup-input" type="text" />

        <button id="saveProfileEdit" class="popup-save-button">저장</button>
      </div>
    </div>

    <script src="/public/scripts/nav.js"></script>
    <script src="/public/scripts/edit-channel.js"></script>
    <script src="/public/scripts/search.js" defer></script>
  </body>
</html>
<script></script>
