      }

      .account-btn {
        position: absolute;
        top: 30px;
        right: 30px;
        width: 50px;
        height: 50px;
        border-radius: 50%;
        overflow: hidden;
        border: 2px solid rgba(255, 255, 255, 0.8);
        cursor: pointer;
        background-color: rgba(255, 255, 255, 0.1);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition:
          transform 0.3s ease,
          border-color 0.3s ease;
      }

      .account-btn:hover {
        transform: scale(1.1);
        border-color: rgba(255, 255, 255, 1);
      }

      .account-btn img {
        width: 100%;
        height: 100%;
        object-fit: cover;
      }
  
</style>

</body>
</html>